{
    "components":{
        "cli":"#dfence/cmd.*",
        "main":"#dfence$",
        "internal":"dfence/internal",
        "vendored":"github.com"
    },
    "constraints":[
        {
            "name":"internal -x-> cli",
            "scope":"internal",
            "kind":"forbid",
            "deps":"cli",
            "onbreak":"error"
        },
        {
            "name":"cli depends only with internal or vendored",
            "scope":"cli",
            "kind":"allow",
            "deps":"internal vendored",
            "onbreak":"error"
        },
        {
            "name":"main only depends on cli",
            "scope":"main",
            "kind":"allow",
            "deps":"cli",
            "onbreak":"error"
        }
    ]
}
